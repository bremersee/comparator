<xs:schema elementFormDefault="qualified" version="1.0" targetNamespace="http://bremersee.org/xmlschemas/comparator/v4" xmlns:tns="http://bremersee.org/xmlschemas/comparator/v4" xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:element name="sortOrder" type="tns:sortOrderType"/>

  <xs:element name="sortOrderItem" type="tns:sortOrderItemType"/>

  <xs:complexType name="sortOrderItemType">
    <xs:sequence>
      <xs:element name="field" type="xs:string" minOccurs="0"/>
      <xs:element name="direction" type="tns:direction" default="ASC" minOccurs="0"/>
      <xs:element name="case-handling" type="tns:caseHandling" default="INSENSITIVE" minOccurs="0"/>
      <xs:element name="null-handling" type="tns:nullHandling" default="NATIVE" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="sortOrderType">
    <xs:sequence>
      <xs:element ref="tns:sortOrderItem" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:simpleType name="direction">
    <xs:restriction base="xs:string">
      <xs:enumeration value="ASC"/>
      <xs:enumeration value="DESC"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="caseHandling">
    <xs:restriction base="xs:string">
      <xs:enumeration value="INSENSITIVE"/>
      <xs:enumeration value="SENSITIVE"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="nullHandling">
    <xs:restriction base="xs:string">
      <xs:enumeration value="NULLS_FIRST"/>
      <xs:enumeration value="NULLS_LAST"/>
      <xs:enumeration value="NATIVE"/>
    </xs:restriction>
  </xs:simpleType>
</xs:schema>
